<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <%if(error) {%>
        <span><%=error%></span>
        <%}%>
        <form class="product-form" action="<% if(edit) { %>/admin/edit/<%= product._id %><% }else { %>/admin/add-product<% } %>"
        method="POST" enctype="multipart/form-data">
        <div class="form-control">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" value="<% if(edit) { %><%= product.title %><% } %>">
        </div>
        <!-- <div class="form-control">
            <label for="imageUrl">Image Url</label>
            <input type="text" name="imageUrl" id="imageUrl-input"
                value="<% if(edit) { %><%= product.imageUrl %><% } %>">
        </div> -->
        <div class="form-control">
            <label for="image">Image</label>
            <input type="file" name="image" id="image-input" accept="image/png, image/jpeg , image/jpg">
        </div>
        <div class="form-control">
            <label for="price">Price</label>
            <input type="number" step="0.01" name="price" id="price-input"
                value="<% if(edit) { %><%= product.price %><% } %>">
        </div>
        <div class="form-control">
            <label for="description">Description</label>
            <textarea name="description" id="description"><% if(edit) { %><%= product.description %><% } %></textarea>
        </div>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <button class="btn" type="submit"><% if(edit) { %>Update Product<% }else { %>Add Product <% } %></button>
        </form>
    </main>
    <%- include('../includes/end.ejs') %>